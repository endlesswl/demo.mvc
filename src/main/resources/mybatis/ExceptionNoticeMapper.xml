<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.palm.lingcai.repository.ExceptionNoticeDao">
	
	<select id="getExceptionNoticeById" resultType="com.palm.lingcai.entity.ExceptionNotice">
		SELECT 
		  mobiles,
		  content 
		FROM
		  tab_exception_notice 
		WHERE id = #{id} 
	</select>
</mapper> 
