<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.palm.lingcai.repository.RoleDao">

    <resultMap id="resultMap" type="com.palm.lingcai.entity.Role">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="rule" column="rule"/>
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
		id,name,description,rule
	</sql>

    <!-- 获取用户: 输出直接映射到对象 -->
    <select id="get" parameterType="Long" resultType="Role">
        SELECT
        <include refid="columns"/>
        FROM tab_role
        WHERE id=#{id}
    </select>

    <select id="findPermissionLinks" parameterType="Long" resultType="map">
		SELECT roleid,permissionid
		FROM tab_role_permission
		WHERE roleid=#{roleId}
	</select>

    <!-- 查询用户, 不分页 -->
    <select id="search" parameterType="map" resultMap="resultMap">
        SELECT
        <include refid="columns"/>
        FROM tab_role
        <where>
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
            <if test="description != null and description != ''">
                AND description = #{description}
            </if>
            <if test="rule != null and rule != ''">
                AND rule = #{rule}
            </if>
        </where>
    </select>

    <!-- 分页查询 -->
    <select id="searchPage" resultMap="resultMap">
        SELECT
        <include refid="columns"/>
        FROM tab_role
        <where>
            <if test="searchFields.name != null and searchFields.name != ''">
                AND name = #{searchFields.name}
            </if>
            <if test="searchFields.description != null and searchFields.description != ''">
                AND description = #{searchFields.description}
            </if>
            <if test="searchFields.rule != null and searchFields.rule != ''">
                AND rule = #{searchFields.rule}
            </if>
        </where>
        <if test="searchFields.sortColumns != null and searchFields.sortColumns != ''">
            ORDER BY ${searchFields.sortColumns}
        </if>
    </select>

    <!-- 新增 -->
    <insert id="insert" parameterType="Role" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO tab_role (
        	name,
        	description,
        	rule
		) VALUES (
        	#{name},
        	#{description},
        	#{rule}
		)
	</insert>

    <!-- 更新 -->
    <update id="update">
        UPDATE tab_role
        <set>
            name = #{name},
            description = #{description},
            rule = #{rule}
        </set>
        WHERE
        id = #{id}
    </update>

    <!-- 删除用户 -->
    <delete id="delete" parameterType="Long">
	     DELETE FROM tab_role WHERE id=#{id}
	</delete>

    <!-- 删除用户角色关联数据 -->
    <delete id="deleteLinks">
        DELETE FROM tab_user_role
        <where>
            <if test="userId != null">
                AND userid = #{userId}
            </if>
            <if test="roleId != null">
                AND roleid = #{roleId}
            </if>
        </where>
    </delete>
    <!-- 新增用户角色关联数据 -->
    <insert id="insertLinks">
		INSERT INTO tab_user_role (
        	userid,
        	roleid
		) VALUES (
        	#{userId},
        	#{roleId}
		)
	</insert>

</mapper> 
