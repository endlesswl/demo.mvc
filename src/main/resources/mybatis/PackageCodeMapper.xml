<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.palm.lingcai.repository.PackageCodeDao">

	<resultMap id="resultMap" type="com.palm.lingcai.entity.PackageCode">
        <result property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="serviceId" column="service_id"/>
        <result property="marketId" column="market_id"/>
        <result property="code" column="code"/>
        <result property="userId" column="user_id"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
		id,create_time,service_id,market_id,code,user_id
	</sql>
	
	<!-- 获取用户: 输出直接映射到对象 -->
	<select id="get" parameterType="Long" resultType="PackageCode">
		SELECT <include refid="columns" />
		FROM tab_package_code
		WHERE id=#{id}
	</select>
	

	<!-- 查询用户, 不分页 -->
	<select id="search" parameterType="map" resultMap="resultMap">
		SELECT <include refid="columns" />
		FROM tab_package_code
		<where>
	       <if test="createTime != null and createTime != ''">
				AND create_time = #{createTime}
		   </if>
	       <if test="serviceId != null and serviceId != ''">
				AND service_id = #{serviceId}
		   </if>
	       <if test="marketId != null and marketId != ''">
				AND market_id = #{marketId}
		   </if>
	       <if test="code != null and code != ''">
				AND code = #{code}
		   </if>
	       <if test="userId != null and userId != ''">
				AND user_id = #{userId}
		   </if>
		</where>
	</select>
	
	<!-- 分页查询 -->
	<select id="searchPage" resultMap="resultMap">
		SELECT <include refid="columns" />
		FROM tab_package_code
		<where>
	       <if test="searchFields.createTime != null and searchFields.createTime != ''">
				AND create_time = #{searchFields.createTime}
			</if>
	       <if test="searchFields.serviceId != null and searchFields.serviceId != ''">
				AND service_id = #{searchFields.serviceId}
			</if>
	       <if test="searchFields.marketId != null and searchFields.marketId != ''">
				AND market_id = #{searchFields.marketId}
			</if>
	       <if test="searchFields.code != null and searchFields.code != ''">
				AND code = #{searchFields.code}
			</if>
	       <if test="searchFields.userId != null and searchFields.userId != ''">
				AND user_id = #{searchFields.userId}
			</if>
		</where>
	</select>
	
	<!-- 新增 -->
	<insert id="insert" parameterType="PackageCode" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO tab_package_code (
        	create_time,
        	service_id,
        	market_id,
        	code,
        	user_id
		) VALUES (
        	#{createTime},
        	#{serviceId},
        	#{marketId},
        	#{code},
        	#{userId}
		)
	</insert>
	
	<!-- 更新 -->
	<update id="update" >
        UPDATE tab_package_code
		<set>
			create_time = #{createTime},
			service_id = #{serviceId},
			market_id = #{marketId},
			code = #{code},
			user_id = #{userId}
		</set>
        WHERE 
	        id = #{id}
	</update>
	
	<!-- 删除用户 -->
	<delete id="delete" parameterType="Long">
	     DELETE FROM tab_package_code WHERE id=#{id}
	</delete>
</mapper> 
