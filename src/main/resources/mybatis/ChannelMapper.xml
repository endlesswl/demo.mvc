<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.palm.lingcai.repository.ChannelDao">

	<resultMap id="resultMap" type="com.palm.lingcai.entity.Channel">
        <result property="id" column="id"/>
        <result property="userid" column="userid"/>
        <result property="channelName" column="channelName"/>
        <result property="pwd" column="pwd"/>
        <result property="channelKey" column="channelKey"/>
        <result property="channelSign" column="channelSign"/>
        <result property="callbackUrl" column="callbackUrl"/>
        <result property="accountType" column="accountType"/>
        <result property="createtime" column="createtime"/>
        <result property="starttime" column="starttime"/>
        <result property="endtime" column="endtime"/>
        <result property="remark" column="remark"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
		id,userid,channelName,pwd,channelKey,channelSign,callbackUrl,accountType,createtime,starttime,endtime,remark
	</sql>
	
	<!-- 获取用户: 输出直接映射到对象 -->
	<select id="get" parameterType="Long" resultType="Channel">
		SELECT <include refid="columns" />
		FROM tab_channel
		WHERE id=#{id}
	</select>
	
	<select id="findUniqueChannelByChannelKey" parameterType="String" resultType="Channel">
		SELECT <include refid="columns" />
		FROM tab_channel
		WHERE channelKey=#{channelKey} limit 1
	</select>
	<!-- 查询用户, 不分页 -->
	<select id="search" parameterType="map" resultMap="resultMap">
		SELECT <include refid="columns" />
		FROM tab_channel
		<where>
	       <if test="userid != null and userid != ''">
				AND userid = #{userid}
		   </if>
	       <if test="channelName != null and channelName != ''">
				AND channelName = #{channelName}
		   </if>
	       <if test="pwd != null and pwd != ''">
				AND pwd = #{pwd}
		   </if>
	       <if test="channelKey != null and channelKey != ''">
				AND channelKey = #{channelKey}
		   </if>
	       <if test="channelSign != null and channelSign != ''">
				AND channelSign = #{channelSign}
		   </if>
	       <if test="callbackUrl != null and callbackUrl != ''">
				AND callbackUrl = #{callbackUrl}
		   </if>
	       <if test="accountType != null and accountType != ''">
				AND accountType = #{accountType}
		   </if>
	       <if test="createtime != null and createtime != ''">
				AND createtime = #{createtime}
		   </if>
	       <if test="starttime != null and starttime != ''">
				AND starttime = #{starttime}
		   </if>
	       <if test="endtime != null and endtime != ''">
				AND endtime = #{endtime}
		   </if>
	       <if test="remark != null and remark != ''">
				AND remark = #{remark}
		   </if>
		</where>
	</select>
	
	<!-- 分页查询 -->
	<select id="searchPage" resultMap="resultMap">
		SELECT <include refid="columns" />
		FROM tab_channel
		<where>
	       <if test="searchFields.userid != null and searchFields.userid != ''">
				AND userid = #{searchFields.userid}
			</if>
	       <if test="searchFields.channelName != null and searchFields.channelName != ''">
				AND channelName = #{searchFields.channelName}
			</if>
	       <if test="searchFields.pwd != null and searchFields.pwd != ''">
				AND pwd = #{searchFields.pwd}
			</if>
	       <if test="searchFields.channelKey != null and searchFields.channelKey != ''">
				AND channelKey = #{searchFields.channelKey}
			</if>
	       <if test="searchFields.channelSign != null and searchFields.channelSign != ''">
				AND channelSign = #{searchFields.channelSign}
			</if>
	       <if test="searchFields.callbackUrl != null and searchFields.callbackUrl != ''">
				AND callbackUrl = #{searchFields.callbackUrl}
			</if>
	       <if test="searchFields.accountType != null and searchFields.accountType != ''">
				AND accountType = #{searchFields.accountType}
			</if>
	       <if test="searchFields.createtime != null and searchFields.createtime != ''">
				AND createtime = #{searchFields.createtime}
			</if>
	       <if test="searchFields.starttime != null and searchFields.starttime != ''">
				AND starttime = #{searchFields.starttime}
			</if>
	       <if test="searchFields.endtime != null and searchFields.endtime != ''">
				AND endtime = #{searchFields.endtime}
			</if>
	       <if test="searchFields.remark != null and searchFields.remark != ''">
				AND remark = #{searchFields.remark}
			</if>
		</where>
	</select>
	
	<!-- 新增 -->
	<insert id="insert" parameterType="Channel" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO tab_channel (
        	userid,
        	channelName,
        	pwd,
        	channelKey,
        	channelSign,
        	callbackUrl,
        	accountType,
        	createtime,
        	starttime,
        	endtime,
        	remark
		) VALUES (
        	#{userid},
        	#{channelName},
        	#{pwd},
        	#{channelKey},
        	#{channelSign},
        	#{callbackUrl},
        	#{accountType},
        	#{createtime},
        	#{starttime},
        	#{endtime},
        	#{remark}
		)
	</insert>
	
	<!-- 更新 -->
	<update id="update" >
        UPDATE tab_channel
		<set>
			userid = #{userid},
			channelName = #{channelName},
			pwd = #{pwd},
			channelKey = #{channelKey},
			channelSign = #{channelSign},
			callbackUrl = #{callbackUrl},
			accountType = #{accountType},
			createtime = #{createtime},
			starttime = #{starttime},
			endtime = #{endtime},
			remark = #{remark}
		</set>
        WHERE 
	        id = #{id}
	</update>
	
	<!-- 删除用户 -->
	<delete id="delete" parameterType="Long">
	     DELETE FROM tab_channel WHERE id=#{id}
	</delete>
</mapper> 
