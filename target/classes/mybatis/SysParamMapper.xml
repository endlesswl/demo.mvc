<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.palm.lingcai.repository.SysParamDao">

	<resultMap id="resultMap" type="com.palm.lingcai.entity.SysParam">
		<result property="id" column="id" />
		<result property="code1" column="code1" />
		<result property="code2" column="code2" />
		<result property="code3" column="code3" />
		<result property="type" column="type" />
		<result property="status" column="status" />
		<result property="description" column="description" />
		<result property="createTime" column="create_time" />
	</resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
		id,code1,code2,code3,type,create_time,description
	</sql>

	<!-- 获取用户: 输出直接映射到对象 -->
	<select id="get" parameterType="String" resultType="SysParam">
		SELECT
		<include refid="columns" />
		FROM tab_sys_param
		WHERE id=#{id}
	</select>

	<select id="getByCode1" parameterType="map" resultMap="resultMap">
		SELECT
		<include refid="columns" />
		FROM tab_sys_param
		WHERE code1=#{code1}
	</select>

	<select id="getByCodes" parameterType="String" resultType="SysParam">
		SELECT
		<include refid="columns" />
		FROM tab_sys_param
		WHERE code1=#{code1}
		AND code2=#{code2}
		AND status='1' limit 1
	</select>

	<select id="searchAll" resultType="SysParam">
		SELECT
		<include refid="columns" />
		FROM tab_sys_param
	</select>

	<select id="search" parameterType="map" resultMap="resultMap">
		SELECT
		<include refid="columns" />
		FROM tab_sys_param
		<where>
			<if test="code1 != null and code1 != ''">
				AND code1 = #{code1}
			</if>
			<if test="code2 != null and code2 != ''">
				AND code2 = #{code2}
			</if>
			<if test="code3 != null and code3 != ''">
				AND code3 = #{code3}
			</if>
			<if test="type != null and type != ''">
				AND type = #{type}
			</if>
		</where>
	</select>


	<!-- 更新code3 -->
	<update id="updateCode3">
		UPDATE tab_sys_param
		<set>
		   <if test="code3 != null and code3 != ''">
				code3 = #{code3},
		   </if>
		   <if test="status != null and status != ''">
				status = #{status}
		   </if>
		</set>
		WHERE id = #{id}
	</update>
</mapper> 
